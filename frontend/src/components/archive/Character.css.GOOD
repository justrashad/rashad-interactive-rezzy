/* ============================================
   ROUNDED CHARACTER - SIMPLIFIED STYLE
   Like the reference image with smooth curves
   ============================================ */

/* BASE CHARACTER - LARGER & ROUNDER */
.character-pixel {
  position: fixed;
  bottom: 130px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 140px;
  z-index: 10;
  transition: bottom 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.character-container {
  position: relative;
  width: 100%;
  height: 100%;
}

/* Level Transition Animation */
.level-transition {
  animation: levelSwitch 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes levelSwitch {
  0% { opacity: 1; transform: translateX(-50%) scale(1); }
  50% { opacity: 0.3; transform: translateX(-50%) scale(0.85) rotate(5deg); }
  100% { opacity: 1; transform: translateX(-50%) scale(1); }
}

/* ============================================
   HEAD - PERFECT CIRCLE (BALD)
   ============================================ */

.char-head {
  position: relative;
  width: 50px;
  height: 50px;
  margin: 0 auto;
  z-index: 10;
}

.hair-top {
  display: none;
}

.hair-detail {
  display: none;
}

.face {
  position: absolute;
  width: 50px;
  height: 50px;
  background: #8B4513;
  border-radius: 50%;
  top: 5px;
  left: 0;
  box-shadow: inset -3px -3px 6px rgba(0,0,0,0.15);
  z-index: 10;
}

.ears {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 5px;
  left: 0;
}

.ear {
  position: absolute;
  width: 12px;
  height: 16px;
  background: #8B4513;
  border-radius: 50%;
  top: 20px;
  box-shadow: inset -2px -2px 3px rgba(0,0,0,0.15);
}

.ear.left-ear {
  left: -6px;
}

.ear.right-ear {
  right: -6px;
}

/* EYES - SIMPLE CIRCLES */
.eyes {
  position: absolute;
  top: 18px;
  left: 10px;
  width: 30px;
  height: 14px;
  z-index: 11;
}

.eye {
  position: absolute;
  width: 12px;
  height: 12px;
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 0 0 2px #000;
}

.eye.left-eye {
  left: 0;
}

.eye.right-eye {
  right: 0;
}

.pupil {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 5px;
  height: 5px;
  background: #000;
  border-radius: 50%;
}

.eye-shine {
  position: absolute;
  top: 2px;
  left: 2px;
  width: 3px;
  height: 3px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
}

/* NOSE & MOUTH */
.nose {
  position: absolute;
  top: 32px;
  left: 22px;
  width: 6px;
  height: 4px;
  background: #A0522D;
  border-radius: 50%;
}

.mouth {
  position: absolute;
  top: 38px;
  left: 18px;
  width: 14px;
  height: 6px;
}

.smile {
  width: 14px;
  height: 6px;
  background: #8B4513;
  border-radius: 0 0 7px 7px;
}

/* ============================================
   NECK - SMOOTH CONNECTION
   ============================================ */

.char-neck {
  position: relative;
  width: 18px;
  height: 8px;
  background: #8B4513;
  margin: -2px auto 0;
  border-radius: 9px;
  z-index: 8;
}

/* ============================================
   TORSO - ROUNDED RECTANGLE
   ============================================ */

.char-torso {
  position: relative;
  width: 56px;
  height: 48px;
  margin: 0 auto;
  z-index: 7;
}

.shirt-body {
