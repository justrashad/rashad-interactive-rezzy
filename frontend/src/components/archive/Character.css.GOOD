/* ===== IRON MAN FOOT REPULSORS FIX ===== */
/* Add this to Character.css */

/* Iron Man Hand Repulsors (existing - keeping for reference) */
.character-pixel.outfit-level-5 .left-arm::after,
.character-pixel.outfit-level-5 .right-arm::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
