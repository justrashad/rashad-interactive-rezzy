  width: 12px;
  height: 20px;
  background: linear-gradient(180deg, 
    rgba(0, 255, 255, 0.9) 0%,
    rgba(255, 255, 255, 0.7) 50%,
    transparent 100%
  );
  border-radius: 50%;
  filter: blur(2px);
  animation: repulsorFlame 0.3s ease-in-out infinite alternate;
  z-index: 10;
}

/* NEW: Iron Man Foot Repulsors */
.character-pixel.outfit-level-5 .left-leg::after,
.character-pixel.outfit-level-5 .right-leg::after {
  content: '';
  position: absolute;
  bottom: -12px;
  left: 50%;
  transform: translateX(-50%);
  width: 14px;
  height: 24px;
  background: linear-gradient(180deg, 
    rgba(0, 255, 255, 0.95) 0%,
    rgba(255, 255, 0, 0.8) 30%,
    rgba(255, 255, 255, 0.6) 60%,
    transparent 100%
  );
  border-radius: 50%;
  filter: blur(2.5px);
  animation: footRepulsorFlame 0.25s ease-in-out infinite alternate;
  z-index: 10;
  box-shadow: 
    0 0 15px rgba(0, 255, 255, 0.8),
    0 0 25px rgba(0, 255, 255, 0.5);
}

/* Stagger the foot flame animations slightly */
.character-pixel.outfit-level-5 .right-leg::after {
  animation-delay: 0.125s;
}

/* Foot repulsor animation (slightly different from hand) */
@keyframes footRepulsorFlame {
  0% {
    height: 24px;
    opacity: 1;
    filter: blur(2.5px);
  }
  50% {
    height: 28px;
    opacity: 0.9;
    filter: blur(3px);
  }
  100% {
    height: 20px;
    opacity: 0.95;
    filter: blur(2px);
  }
}

