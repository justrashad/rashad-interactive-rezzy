/* ============================================
   MOVEMENT ANIMATIONS - SMOOTH & ROUNDED
   ============================================ */

.character-pixel.moving {
  animation: walkCycle 0.6s ease-in-out infinite;
}

@keyframes walkCycle {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-3px); }
}

.character-pixel.moving .left-leg {
  animation: walkLeftLegCycle 0.6s ease-in-out infinite;
}

.character-pixel.moving .right-leg {
  animation: walkRightLegCycle 0.6s ease-in-out infinite;
}

@keyframes walkLeftLegCycle {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(-12deg); }
}

@keyframes walkRightLegCycle {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(12deg); }
}

.character-pixel.moving .left-arm {
  animation: walkLeftArmCycle 0.6s ease-in-out infinite;
}

.character-pixel.moving .right-arm {
  animation: walkRightArmCycle 0.6s ease-in-out infinite;
}

@keyframes walkLeftArmCycle {
  0%, 100% { transform: rotate(-10deg); }
  50% { transform: rotate(-20deg); }
}

@keyframes walkRightArmCycle {
  0%, 100% { transform: rotate(10deg); }
  50% { transform: rotate(20deg); }
}

/* ============================================
   BASKETBALL ANIMATIONS
   ============================================ */

.character-pixel.dribbling {
  animation: basketballDribble 1s ease-in-out infinite;
}

@keyframes basketballDribble {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-8px); }
}

.character-pixel.dribbling .right-arm {
  animation: dribbleArmMotion 1s ease-in-out infinite;
}

@keyframes dribbleArmMotion {
  0%, 100% { transform: rotate(10deg); }
  50% { transform: rotate(50deg) translateY(18px); }
}

/* ============================================
   SWIMMING ANIMATIONS
   ============================================ */

.character-pixel.swimming,
.character-pixel.underwater {
  animation: swimMotion 2.5s ease-in-out infinite;
}

@keyframes swimMotion {
  0%, 100% { transform: translateX(-50%) translateY(0) rotate(0deg); }
  33% { transform: translateX(-50%) translateY(-8px) rotate(-2deg); }
  66% { transform: translateX(-50%) translateY(8px) rotate(2deg); }
}

.character-pixel.swimming .arm,
.character-pixel.underwater .arm {
  animation: swimArmStroke 2.5s ease-in-out infinite;
}

@keyframes swimArmStroke {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(20deg); }
}

/* ============================================
   BOSS FIGHT ANIMATIONS
   ============================================ */

.character-pixel.fighting-boss,
.character-pixel.battle-stance {
  animation: fightStance 1.5s ease-in-out infinite;
}

@keyframes fightStance {
  0%, 100% { transform: translateX(-50%) translateY(0) scale(1); }
  50% { transform: translateX(-50%) translateY(-5px) scale(1.02); }
}

.power-aura-effect {
  position: absolute;
  width: 120px;
  height: 120px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: radial-gradient(circle, rgba(255, 215, 0, 0.4), transparent);
  border-radius: 50%;
  animation: powerAuraGlow 2s ease-in-out infinite alternate;
}

@keyframes powerAuraGlow {
  0% { transform: translate(-50%, -50%) scale(0.9); opacity: 0.4; }
  100% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.7; }
}

/* ============================================
   FLYING ANIMATIONS
   ============================================ */

.character-pixel.flying,
.character-pixel.jetpack-active {
  animation: flyingMotion 2.5s ease-in-out infinite;
}

@keyframes flyingMotion {
  0%, 100% { transform: translateX(-50%) translateY(0) rotate(0deg); }
  33% { transform: translateX(-50%) translateY(-18px) rotate(-4deg); }
  66% { transform: translateX(-50%) translateY(8px) rotate(4deg); }
}

/* ============================================
   LANDING ANIMATIONS
   ============================================ */

.character-pixel.landing,
.character-pixel.superhero-landing {
  animation: heroLanding 2s ease-in-out infinite;
}

@keyframes heroLanding {
  0%, 100% { transform: translateX(-50%) translateY(0) scale(1); }
  50% { transform: translateX(-50%) translateY(-8px) scale(1.06); }
}

.character-pixel.landing .arm,
.character-pixel.superhero-landing .arm {
  animation: heroArmsUp 2s ease-in-out infinite;
}

@keyframes heroArmsUp {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(-12deg); }
}

/* ============================================
   HOVER EFFECT
   ============================================ */

.character-pixel:hover {
  animation: characterBounce 0.8s;
}

@keyframes characterBounce {
  0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
  40% { transform: translateX(-50%) translateY(-10px); }
  60% { transform: translateX(-50%) translateY(-5px); }
}

/* ============================================
