  border-radius: 6px;
  box-shadow: inset -1px 0 2px rgba(0,0,0,0.15);
}

.arm.left-arm {
  left: -6px;
  transform-origin: top center;
  transform: rotate(-10deg);
}

.arm.right-arm {
  right: -6px;
  transform-origin: top center;
  transform: rotate(10deg);
}

.shoulder {
