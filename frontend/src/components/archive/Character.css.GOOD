  height: 48px;
  background: #FFFFFF;
  border-radius: 16px;
  box-shadow: inset 0 -4px 8px rgba(0,0,0,0.1);
}

.collar-left,
.collar-right {
  position: absolute;
  width: 16px;
  height: 10px;
  background: #E0E0E0;
  top: 0;
  border-radius: 8px 8px 0 0;
}

.collar-left {
  left: 12px;
  transform: rotate(-10deg);
}

.collar-right {
  right: 12px;
  transform: rotate(10deg);
}

.shirt-buttons {
  position: absolute;
