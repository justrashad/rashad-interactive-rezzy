.character-pixel.outfit-level-5.flying .right-arm::after {
  height: 28px;
  width: 14px;
  animation: handRepulsorFlying 0.2s ease-in-out infinite;
}

@keyframes handRepulsorFlying {
  0% {
    height: 28px;
    opacity: 1;
  }
  50% {
    height: 35px;
    opacity: 0.9;
  }
  100% {
    height: 25px;
    opacity: 0.95;
  }
}